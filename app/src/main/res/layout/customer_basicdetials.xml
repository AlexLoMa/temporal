<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/salutation"
        android:layout_width="@dimen/form_width"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/form_marginstart"
        app:layout_constraintEnd_toStartOf="@id/firstname"
        app:layout_constraintStart_toStartOf="parent">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:gravity="center"
            android:hint="@string/salutation"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@android:color/black" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/firstname"
        android:layout_width="@dimen/form_width"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/form_marginstart"
        app:layout_constraintEnd_toStartOf="@id/initial"
        app:layout_constraintStart_toEndOf="@+id/salutation">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:gravity="center"
            android:hint="@string/firstname"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@android:color/black" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/firstname_errormsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/error_message"
        android:textColor="@color/red_500"
        android:textSize="@dimen/mortform_text"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/firstname"
        app:layout_constraintStart_toStartOf="@id/firstname"
        app:layout_constraintTop_toBottomOf="@id/firstname" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/initial"
        android:layout_width="@dimen/form_width"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/form_marginstart"
        app:layout_constraintEnd_toStartOf="@id/lastname"
        app:layout_constraintStart_toEndOf="@id/firstname">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:gravity="center"
            android:hint="@string/initial"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@android:color/black" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/lastname"
        android:layout_width="@dimen/form_width"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/form_marginstart"
        app:layout_constraintEnd_toStartOf="@id/birthdate"
        app:layout_constraintStart_toEndOf="@+id/initial">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:gravity="center"
            android:hint="@string/lastname"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@android:color/black" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/lastname_errormsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/error_message"
        android:textColor="@color/red_500"
        android:textSize="@dimen/mortform_text"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/lastname"
        app:layout_constraintStart_toStartOf="@id/lastname"
        app:layout_constraintTop_toBottomOf="@id/lastname" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/birthdate"
        android:layout_width="@dimen/form_width"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/form_marginstart"
        app:layout_constraintEnd_toStartOf="@id/ssn"
        app:layout_constraintStart_toEndOf="@+id/lastname">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/birth_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:gravity="center"
            android:hint="@string/birthdate"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@android:color/black" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/birthdate_errormsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/error_message"
        android:textColor="@color/red_500"
        android:textSize="@dimen/mortform_text"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/birthdate"
        app:layout_constraintStart_toStartOf="@id/birthdate"
        app:layout_constraintTop_toBottomOf="@id/birthdate" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/ssn"
        android:layout_width="@dimen/form_width"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/form_marginstart"
        app:layout_constraintEnd_toStartOf="@id/martialstatus"
        app:layout_constraintStart_toEndOf="@+id/birthdate">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:gravity="center"
            android:hint="@string/ssn"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@android:color/black" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/martialstatus"
        android:layout_width="@dimen/form_width"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/form_marginstart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ssn">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:gravity="center"
            android:hint="@string/martialstatus"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@android:color/black" />
    </android.support.design.widget.TextInputLayout>
</android.support.constraint.ConstraintLayout>