<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/bnch_name"
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:text="Branch Manager Name"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/bnch_staffing"
        android:layout_width="200dp"
        android:layout_height="260dp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/bnch_calendar"
        android:background="@android:color/white"
        android:gravity="center"
        android:text="Staffing"
        android:textColor="@android:color/black"
        android:textSize="41sp" />

    <TextView
        android:id="@+id/bnch_performance"
        android:layout_width="200dp"
        android:layout_height="260dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/bnch_staffing"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/bnch_calendar"
        android:background="@android:color/white"
        android:gravity="center"
        android:text="Performance"
        android:textColor="@android:color/black"
        android:textSize="41sp" />

    <TextView
        android:id="@+id/bnch_calendar"
        android:layout_width="500dp"
        android:layout_height="250dp"
        android:layout_below="@+id/bnch_name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:text="@string/calendar"
        android:textColor="@android:color/black"
        android:textSize="41sp" />

    <TextView
        android:id="@+id/bnch_email"
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:layout_below="@+id/bnch_calendar"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:text="@string/email"
        android:textColor="@android:color/black"
        android:textSize="41sp" />

    <TextView
        android:id="@+id/bnch_stocks"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:text="Company, Stocks, or News"
        android:textColor="@android:color/black"
        android:textSize="30sp" />
</RelativeLayout>