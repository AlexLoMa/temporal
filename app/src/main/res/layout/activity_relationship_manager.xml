<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="viewmodel"
            type="com.sam.samproject.relationmanager.RelationshipManagerViewModel"/>
    </data>
    <android.support.constraint.ConstraintLayout
        android:padding="@dimen/margin_8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_blue_dark"
        tools:context=".RelationshipManagerActivity">

        <Button

            app:layout_constraintBottom_toTopOf="@+id/btnUsingMobileApp"
            app:layout_constraintStart_toStartOf="@+id/btnUsingMobileApp"
            app:layout_constraintEnd_toEndOf="@+id/btnUsingMobileApp"
            android:id="@+id/login_as"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_medium"
            android:padding="@dimen/margin_8dp"
            android:text="Login as RM"
            android:background="@android:color/white"
            android:layout_marginTop="@dimen/margin_16dp"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_height="@dimen/spinner_height" />


        <Button
            app:layout_constraintBottom_toTopOf="@+id/btnCRMSummary"
            android:id="@+id/btnUsingMobileApp"
            android:padding="@dimen/margin_8dp"
            android:text="Using the \n Mobile app"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_large"
            android:layout_marginLeft="@dimen/margin_16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/margin_16dp"
            android:background="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/login_as"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/btnCRMSummary"
            android:padding="@dimen/margin_8dp"
            android:text="CRM \n Summary"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_large"
            android:layout_marginLeft="@dimen/margin_16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/margin_16dp"
            android:background="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/btnUsingMobileApp"
            android:layout_width="0dp"
            app:layout_constraintEnd_toEndOf="@id/btnUsingMobileApp"
            app:layout_constraintBottom_toTopOf="@+id/btnFastCheckDepo"
            android:layout_height="wrap_content" />


        <Button
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/btnFastCheckDepo"
            android:padding="@dimen/margin_8dp"
            android:text="Fast Check \n Deposite"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_large"
            android:layout_marginLeft="@dimen/margin_16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/margin_16dp"
            android:background="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/btnCRMSummary"
            android:layout_width="0dp"
            app:layout_constraintEnd_toEndOf="@id/btnUsingMobileApp"
            android:layout_height="wrap_content" />

        <Button
            android:textSize="@dimen/text_size_large"
            android:text="Electronic \n Queue"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:background="@android:color/white"
            android:layout_marginRight="@dimen/margin_8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/btnFastCheckDepo"
            android:layout_marginLeft="@dimen/margin_16dp"
            app:layout_constraintTop_toTopOf="@+id/login_as"
            app:layout_constraintStart_toEndOf="@+id/login_as"
            android:layout_width="0dp"
            android:layout_height="0dp" />

    </android.support.constraint.ConstraintLayout>
</layout>