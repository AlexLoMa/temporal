<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark">

    <TextView
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/margin_16dp"
        android:id="@+id/rlshElectronicQueue"
        android:layout_width="@dimen/tile_width_height"
        android:layout_height="@dimen/tile_width_height"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/tile_margin"
        android:background="@android:color/white"
        android:gravity="center"
        android:text="Electronic \n Queue"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guideline1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:gravity="center"
        android:id="@+id/rlshUsingMobileApp"
        android:layout_width="@dimen/tile_width_height"
        android:layout_height="@dimen/tile_width_height"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/tile_margin"
        android:background="@android:color/white"
        android:padding="@dimen/margin_8dp"
        android:text="Using the \n Mobile app"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_large"
        app:layout_constraintEnd_toEndOf="@id/guideline1"
        app:layout_constraintBottom_toTopOf="@+id/rlshCRMSummary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:gravity="center"
        android:id="@+id/rlshCRMSummary"
        android:layout_width="@dimen/tile_width_height"
        android:layout_height="@dimen/tile_width_height"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:background="@android:color/white"
        android:padding="@dimen/margin_8dp"
        android:text="CRM \n Summary"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_large"
        app:layout_constraintBottom_toTopOf="@+id/rlshFastCheckDepo"
        app:layout_constraintEnd_toEndOf="@id/guideline1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rlshUsingMobileApp" />

    <TextView
        android:gravity="center"
        android:layout_marginBottom="@dimen/margin_16dp"
        android:id="@+id/rlshFastCheckDepo"
        android:layout_width="@dimen/tile_width_height"
        android:layout_height="@dimen/tile_width_height"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:background="@android:color/white"
        android:padding="@dimen/margin_8dp"
        android:text="Fast Check \n Deposit"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline1"
        app:layout_constraintTop_toBottomOf="@+id/rlshCRMSummary"
         />

    <android.support.constraint.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>