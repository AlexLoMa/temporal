<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_root"
    android:background="@android:color/holo_blue_dark">

    <TextView
        android:id="@+id/account_open"
        style="@style/dashboard_tile_style"
        android:layout_width="@dimen/tile_width_height"
        android:layout_height="@dimen/tile_width_height"
        android:layout_marginStart="@dimen/tile_margin"
        android:layout_marginEnd="@dimen/bm_margin_start_end"
        android:layout_marginTop="@dimen/tile_margin"
        android:text="@string/accountopening"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/crm"
        app:layout_constraintEnd_toStartOf="@id/guideline1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/crm"
        style="@style/dashboard_tile_style"
        android:layout_width="@dimen/tile_width_height"
        android:layout_height="@dimen/tile_width_height"
        android:layout_marginEnd="@dimen/bm_margin_start_end"
        android:layout_marginStart="@dimen/tile_margin"
        android:layout_marginBottom="@dimen/tile_margin"
        android:layout_marginTop="@dimen/tile_margin"
        android:gravity="center"
        android:text="@string/crm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/pb_stocks"
        app:layout_constraintEnd_toStartOf="@id/guideline1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_open" />

    <TextView
        android:id="@+id/pb_stocks"
        style="@style/dashboard_tile_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/stocks_height"
        android:layout_margin="@dimen/tile_margin"
        android:layout_marginTop="@dimen/stocks_margin_top"
        android:text="@string/companystocks"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pb_email" />

    <TextView
        android:id="@+id/pb_calendar"
        style="@style/dashboard_tile_style"
        android:layout_width="@dimen/tile_width_height"
        android:layout_height="@dimen/tile_width_height"
        android:layout_marginEnd="@dimen/tile_margin"
        android:layout_marginStart="@dimen/bm_margin_start_end"
        android:layout_marginTop="@dimen/tile_margin"
        android:text="@string/calendar"
        app:layout_constraintBottom_toTopOf="@+id/pb_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pb_email"
        style="@style/dashboard_tile_style"
        android:layout_width="@dimen/tile_width_height"
        android:layout_height="@dimen/tile_width_height"
        android:layout_marginStart="@dimen/bm_margin_start_end"
        android:layout_marginEnd="@dimen/bm_margin_start_end"
        android:layout_marginTop="@dimen/pb_margin"
        android:text="@string/email"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/pb_stocks"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintTop_toBottomOf="@+id/pb_calendar" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>