<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="16dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:background="@drawable/white_background"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:padding="@dimen/margin_16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_margin="8dp"
            android:id="@+id/profile"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            android:src="@drawable/ic_profile"
            android:layout_width="wrap_content"
            android:layout_height="52dp" />


        <TextView
            android:textColor="#000000"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_toRightOf="@+id/profile"
            android:id="@+id/txtName"
            android:textSize="12dp"
            android:textStyle="bold"
            android:text="Mathhew Godfrey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:textColor="#000000"
            android:layout_below="@+id/txtName"
            android:layout_toRightOf="@+id/profile"
            android:layout_marginTop="10dp"
            android:id="@+id/txtEmail"
            android:textSize="12dp"
            android:textStyle="bold"
            android:text="Mathhew@gmail.com"
            app:layout_constraintStart_toEndOf="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <View
        android:layout_marginTop="32dp"
        android:id="@+id/view"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/grey_button"
        app:layout_constraintTop_toBottomOf="@+id/txtEmail"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />


    <TextView
        android:textColor="#000000"
        android:id="@+id/personalBanker"
        android:padding="8dp"
        android:background="@drawable/black_border_transparant_back"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:textSize="12dp"
        android:textStyle="bold"
        android:text="Personal Banker"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:textColor="#000000"
        android:id="@+id/branchManager"
        android:padding="8dp"
        android:background="@drawable/black_border_transparant_back"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/personalBanker"
        android:textSize="16dp"
        android:textStyle="bold"
        android:text="Branch Manager"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:textColor="#000000"
        android:id="@+id/relManager"
        android:padding="8dp"
        android:background="@drawable/black_border_transparant_back"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/branchManager"
        android:textSize="12dp"
        android:textStyle="bold"
        android:text="Relationship Manager"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_marginTop="32dp"
        android:id="@+id/view1"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/grey_button"
        app:layout_constraintTop_toBottomOf="@+id/relManager"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />


    <TextView
        android:textColor="@color/text_white_color"
        android:gravity="center"
        android:text="Logout"
        android:textSize="16dp"
        android:textStyle="bold"
        android:background="@color/header"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toBottomOf="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="42dp" />

</LinearLayout>