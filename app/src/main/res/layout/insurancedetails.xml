<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/lifeins"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_weight="0.25"
        app:layout_constraintEnd_toStartOf="@+id/disins"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@android:color/black"
        android:text="Life Insurance" />

    <EditText
        android:id="@+id/lifeinsedittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_weight="0.25"
        app:layout_constraintEnd_toStartOf="@+id/disinsEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lifeins"
        android:background="@drawable/edtitext_background"/>

    <TextView
        android:id="@+id/disins"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_weight="0.25"
        app:layout_constraintEnd_toStartOf="@+id/criins"
        app:layout_constraintStart_toEndOf="@+id/lifeins"
        android:text="MobileNumber"
        android:textColor="@android:color/black"/>

    <EditText
        android:id="@+id/disinsEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_weight="0.25"
        app:layout_constraintEnd_toStartOf="@+id/criinsEditText"
        app:layout_constraintStart_toEndOf="@+id/lifeinsedittext"
        app:layout_constraintTop_toBottomOf="@+id/disins"
        android:background="@drawable/edtitext_background" />

    <TextView
        android:id="@+id/criins"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_weight="0.25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/disins"
        android:text="WorkNumber"
        android:textColor="@android:color/black"/>

    <EditText
        android:id="@+id/criinsEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_weight="0.25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/disinsEditText"
        app:layout_constraintTop_toBottomOf="@+id/criins"
        android:background="@drawable/edtitext_background"/>

</android.support.constraint.ConstraintLayout>